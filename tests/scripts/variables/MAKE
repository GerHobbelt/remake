#								     -*-perl-*-

$description = "Test proper behavior of the MAKE variable";

$details = "DETAILS";

run_make_test(q!
TMP  := $(MAKE)
MAKE := $(subst X=$(X),,$(MAKE))
all:
	@echo $(TMP)
	$(MAKE) -f #MAKEFILE# foo

foo:
	@echo $(MAKE)
!,
              '',
              "#MAKEPATH#
##>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>
#MAKEPATH# -f #MAKEFILE# foo
##<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<
"
              . "#MAKE#[1]: Entering directory `#PWD#'\n"
              . "#MAKEPATH#\n#MAKE#[1]: Leaving directory `#PWD#'\n");

rmfiles("foo");

1;
